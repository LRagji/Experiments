        </div>
        <img id="loadingSpinner" style="max-width:220px; max-height:250px" src="../static/resources/images/loading.gif"
            alt="Loading Results">
        <div id="resultContainer" class="card-columns">

        </div>

    </div>
   
    <!-- Footer -->
    <% include ./footer %>

    <script>
            loadData();
            function loadData() {
                $.getJSON("/v1/home/products", function (data) {
                    var items = [];
                    var template = $('#productTemplate');
                    var container = $('#resultContainer');
                    var spinner = $('#loadingSpinner');
                    $.each(data, function (key, val) {
                        var clonedTemplate = template.clone();
                        clonedTemplate.show();
                        container.append(clonedTemplate);
                    });
                    spinner.hide();
                });
            }
        </script>
