                                </div>
                            </div>
                            <!-- Pincode -->
                            <div class="row m-1">
                                <div class="col">
                                    <input type="text" name="bPincode" class="form-control" placeholder="Pincode">
                                </div>
                            </div>
                            <!-- State -->
                            <div class="row m-1">
                                <div class="col">
                                    <select id="inputState" name="bState" class="input-group-prepend custom-select">
                                        <option>Andaman &amp; Nicobar</option>
                                        <option>Andhra Pradesh</option>
                                        <option>Arunachal Pradesh</option>
                                        <option>Assam</option>
                                        <option>Bihar</option>
                                        <option>Chandigarh</option>
                                        <option>Chhattisgarh</option>
                                        <option>Dadra &amp; Nagar Haveli</option>
                                        <option>Daman &amp; Diu</option>
                                        <option>Goa</option>
                                        <option>Gujarat</option>
