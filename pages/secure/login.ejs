<!doctype html>
<html lang="en">

<head>
    <% include ../head %>

    <title>Health Mall</title>
</head>

<body>
    <!-- Main Nav -->
    <% include ../header %>

    <div class="container">
        <div class="row my-5 py-5">

            <div class="col-sm py-5 bg-primary text-white">
                <h1>Login</h1>
                <form action="/secure/login" method="post">
                    <% if (error.length>=1) { %>
                    <%- '<div class="alert alert alert-danger" role="alert">Invalid user or credentials.</div>' %>
                    <% } %>
                    <div class="form-group">
                        <label for="loginUsername">Email address</label>
                        <input type="email" class="form-control" id="loginUsername" aria-describedby="emailHelp" name="username"
                            placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="loginPass">Password</label>
                        <input type="password" name="password" class="form-control" id="loginPass" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-dark">Login</button>
                </form>
            </div>

            <div class="col-sm py-5 bg-dark text-white">
                <h1>Register</h1>
                <form>
                    <div class="form-group">
                        <label for="registerFirstName">First Name</label>
                        <input type="text" class="form-control" id="registerFirstName" placeholder="First Name">
                    </div>
                    <div class="form-group">
                        <label for="registerLastName">Last Name</label>
                        <input type="text" class="form-control" id="registerLastName" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <label for="registerPhone">Mobile Number</label>
                        <input type="number" class="form-control" id="registerPhone" placeholder="Mobile Number">
                    </div>
                    <div class="form-group">
                        <label for="registerEmail">Email address</label>
                        <input type="email" class="form-control" id="registerEmail" aria-describedby="emailHelp"
                            placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="registerPass">Password</label>
                        <input type="password" class="form-control" id="registerPass" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary bg-primary">Register</button>
                </form>
            </div>

        </div>
    </div>
    <!-- Footer -->
    <% include ../footer %>
</body>

</html>