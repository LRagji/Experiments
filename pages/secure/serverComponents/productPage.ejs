<div class="row">
    <div class="col-md px-0">
        <div class="accordion" id="T<%=id%>">
            <div class="card border-bottom">
                <div class="card-header" id="A<%=id%>">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#B<%=id%>"
                            aria-expanded="true" aria-controls="B<%=id%>">
                            <%=tittle%>
                        </button>
                    </h2>
                </div>

                <div id="B<%=id%>" class="collapse" aria-labelledby="A<%=id%>" data-parent="#T<%=id%>">
                    <div class="card-body">
                        <div class="card-columns">
                            <input type="hidden" name="<%=id%>[]" value="-1"/>
                            <input type="hidden" name="<%=id%>[]" value="-1"/>
                            <% healthTopics.forEach(function(healthTopic){ %>
                            <%-`<div class="form-check">
                                <input class="form-check-input" name="${id}[]" type="checkbox" ${selectedHealthTopics.indexOf(healthTopic.id)>-1?'checked':''} value=${healthTopic.id} id="c${healthTopic.id}">
                                <label class="form-check-label" for="c${healthTopic.id}">
                                 ${healthTopic.name}
                                </label>
                            </div>`%>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>